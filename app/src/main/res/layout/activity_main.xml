<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:weightSum="100" >

        <TextView
            android:id="@+id/game"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_gravity="center"
            android:fontFamily="***"
            android:gravity="center"
            android:text="The Game ----------- 3levels"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20dp" />
    </LinearLayout>
    <TextView
        android:id="@+id/question_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/question_text"
        android:layout_centerInParent="true"
        android:textSize="15dp"
        android:background="#eae4de"
        android:padding="20dp"
        />

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100"
        android:layout_below="@+id/question_text_view"
        android:gravity="center"
        android:paddingTop="20dp"
        android:id="@+id/linear"

        >
        <Button
            android:id="@+id/false_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/false_button"
            android:layout_alignParentRight="true"
            android:layout_weight="50"
            android:layout_margin="20dp"
            android:background="#8f2400"
            android:textColor="#ffffff"/>
        <Button
            android:id="@+id/true_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/true_button"
            android:layout_alignParentLeft="true"
            android:layout_weight="50"
            android:layout_margin="20dp"
            android:background="#4c8f00"
            android:textColor="#ffffff"
            />

    </LinearLayout>
    <Button
        android:id="@+id/cheat_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/cheat_button"
        android:textSize="20dp"
        android:layout_centerInParent="true"
        android:layout_below="@+id/linear"
        android:background="#0d2c74"
        android:textColor="#ffffff"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="20dp"
        android:layout_above="@+id/question_text_view"
        android:weightSum="100"
        >

        <TextView
            android:id="@+id/text1"
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:layout_gravity="center"
            android:layout_weight="80"
            android:padding="40dp"
            android:gravity="center"
             />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:layout_gravity="center"
            android:layout_weight="20"
            android:padding="10dp"
            android:text="The Result : "
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16dp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:weightSum="60">

        <ImageButton

            android:id="@+id/next_description"
            android:layout_width="60dp"
            android:layout_height="63dp"
            android:layout_alignParentLeft="true"
            android:layout_weight="30"
            android:layout_margin="20dp"
            android:src="@drawable/ic_baseline_arrow_forward_ios_24" />

        <ImageButton

            android:id="@+id/prev_description"
            android:layout_width="60dp"
            android:layout_height="63dp"
            android:src="@drawable/ic_baseline_arrow_back_ios_24"
            android:layout_alignParentRight="true"
            android:layout_weight="30"
            android:layout_margin="20dp"
            ></ImageButton>

    </LinearLayout>
</RelativeLayout>